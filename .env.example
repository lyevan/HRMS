# API Environment Variables Template
# Copy this to .env and fill in your actual values

# Database Configuration
PGHOST=your-database-host
PGPORT=5432
PGDATABASE=your-database-name
PGUSER=your-database-user
PGPASSWORD=your-database-password
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRATION=7d
COOKIE_EXPIRATION=604800000

# ESP32 Authentication
ESP32_SECRET=your-esp32-device-secret

# Email Configuration (Mailtrap/SMTP)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=your-mailtrap-username
MAIL_PASS=your-mailtrap-password
MAIL_FROM=noreply@yourcompany.com

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Server Configuration
PORT=3000
NODE_ENV=production
