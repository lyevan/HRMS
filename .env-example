# Server Configuration
PORT=3000

# Database Configuration with Prisma + Supabase
# Replace with your actual Supabase database credentials
DATABASE_URL="postgresql://postgres.your-project-ref:your-password@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.your-project-ref:your-password@aws-0-ap-southeast-1.pooler.supabase.com:5432/postgres"

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Legacy PostgreSQL settings (no longer needed with Prisma)
# PGHOST='your-host'
# PGDATABASE='your-database'
# PGUSER='your-user'
# PGPASSWORD='your-password'
# PGPORT='5432'

# Arcjet Security
ARCJET_KEY=your-arcjet-key
ARCJET_ENV=development

# Frontend Configuration
FRONTEND_URL="http://localhost:5173"

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION="7d"  # 7 days
COOKIE_EXPIRATION=604800000  # 7 days in milliseconds

# ESP32 Security
ESP32_SECRET=your-esp32-secret-key

# Email Configuration (Mailtrap)
MAILTRAP_HOST=live.smtp.mailtrap.io
MAILTRAP_API_KEY=your-mailtrap-api-key
MAILTRAP_PASS=your-mailtrap-password

# Email Configuration (Gmail - Alternative)
GMAIL_HOST=smtp.gmail.com
GMAIL_USER=your-gmail@gmail.com
GMAIL_PASS=your-gmail-app-password

# Company Configuration
COMPANY_NAME="Your Company Name"

